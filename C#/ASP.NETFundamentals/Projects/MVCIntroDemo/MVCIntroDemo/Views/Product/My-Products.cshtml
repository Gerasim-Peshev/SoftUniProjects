@model IEnumerable<MVCIntroDemo.Models.Product.ProductViewModel>
@{
    ViewBag.TItle = "All products";
}

<div class="card" style="width: 18rem;">
    <div class="card-header">@ViewBag.Title</div>
    <ul class="list-group list-group-flush">
        @foreach (var product in Model)
        {
            <li class="list-group-item">
                <a href="https://localhost:7008/Product/ById/@product.Id">N.@product.Id: @product.Name - @product.Price lv.</a>
            </li>
        }
    </ul>
    <form asp-controller="Product" asp-action="My-Products">
        <input type="text" name="keyword"/>
        <button>Submit</button>
    </form>
</div>
